<table>
  <tr>
    <td>
      <% if f.object.send("#{attribute_name}_uid") %>
        <%= image_tag f.object.send(attribute_name).thumb(resize).url, id: image_id %>
        <div>
          <%= f.label("remove_#{attribute_name}", "削除") %>
          <%= f.check_box("remove_#{attribute_name}") %>
        </div>
      <% else %>
        <%= image_tag(SimpleDragonflyPreview.configuration.default_image_url, id: image_id) %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>
      <%= content_tag(:iframe, nil, src: main_app.simple_dragonfly_preview_iframe_path(retained_id: retained_id, image_id: image_id, resize: resize, attribute_keys: attribute_keys), width:"auto", height:"50", frameborder:"0") %>
    </td>
  </tr>
</table>
<%= f.hidden_field("retained_#{attribute_name}") %>
<%= f.hidden_field("#{attribute_name}_url") %>
